<%- include("../../partials/head.ejs") %>
<%-include("../../partials/navbar.ejs") %>
<body>
  <div class="container">
    <br />
    <div class="card">
      <div class="card-header">
        <h2>Novo Artigo</h2>
      </div>
      <div class="card-body">
        <form method="POST" action="/articles/save">
          <input
            class="form-control"
            type="text"
            name="title"
            placeholder="Defina o tÃ­tulo do artigo"
          />
          <br />
          <textarea
            name="body"
            class="form-control"
            id="article"
            placeholder="Escreva o artigo aqui"
            cols="30"
            rows="10"
          ></textarea>
          <br />
          <h4>Categoria</h4>
          <select name="category" id="" class="form-control">
            <% categories.forEach(element => { %>
            <option value="<%=element.id%>"> <%= element.title %> </option>
            <% }) %>
          </select>
          <br />
          <button class="btn btn-success btn-large">Cadastrar</button>
        </form>
      </div>
    </div>
  </div>
</body>
